package com.mycompany.retangulo;

/**
 *
 * @author unifmchishman
 */

import java.util.Scanner;
public class RetanguloTeste {
    public static void main(String args[]){
        Scanner input = new Scanner(System.in);
        Retangulo r1 = new Retangulo();
        Retangulo r2 = new Retangulo();
        
        System.out.println("Digite o valor do lado 1 do Retangulo 1: ");
        r1.setLado1(input.nextInt());
        System.out.println("Digite o valor do lado 2 do Retangulo 1: ");
        r1.setLado2(input.nextInt());
        
        System.out.println("Digite o valor do lado 1 do Retangulo 2: ");
        r2.setLado1(input.nextInt());
        System.out.println("Digite o valor do lado 2 do Retangulo 2: ");
        r2.setLado2(input.nextInt());
        
        System.out.println("Retangulo 1:");
        System.out.println("Lado 1: " + r1.getLado1());
        System.out.println("Lado 2: " + r1.getLado2());
        System.out.println("Area: " + r1.area());
        System.out.println("Perimetro: " + r1.perimetro());
        
        System.out.println("Retangulo 2:");
        System.out.println("Lado 1: " + r2.getLado1());
        System.out.println("Lado 2: " + r2.getLado2());
        System.out.println("Area: " + r2.area());
        System.out.println("Perimetro: " + r2.perimetro());
        
    }
}
